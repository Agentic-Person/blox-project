# ===================================
# N8N WORKFLOW INTEGRATION (BLOX WIZARD AI)
# ===================================

# N8n server base URL (required for AI chat integration)
# Example: https://your-n8n-domain.com or http://localhost:5678
N8N_WEBHOOK_URL="http://localhost:5678"

# N8n API key (optional, for secured endpoints)
# Generate this in your N8n instance under Settings > n8n API
N8N_API_KEY=""

# N8n request timeout in milliseconds (default: 30000)
N8N_TIMEOUT="30000"

# Enable N8n fallback mode (uses mock responses when N8n is down)
N8N_FALLBACK_ENABLED="true"

# N8n specific endpoints (configured in workflows)
N8N_ORCHESTRATOR_ENDPOINT="/webhook/orchestrator"
N8N_SEMANTIC_SEARCH_ENDPOINT="/webhook/semantic-search" 
N8N_ANSWER_GENERATOR_ENDPOINT="/webhook/answer-generator"
N8N_TASK_GENERATOR_ENDPOINT="/webhook/generate-schedule"
N8N_INTERACTION_TRACKER_ENDPOINT="/webhook/track-interaction"

# ===================================
# AI SERVICES (FOR N8N WORKFLOWS)
# ===================================

# OpenAI API key (required for AI chat responses and embeddings)
# Get this from https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-your-openai-key-here"

# AI model configuration
OPENAI_MODEL="gpt-4o-mini"
OPENAI_EMBEDDING_MODEL="text-embedding-3-small"

# ===================================
# DATABASE FOR N8N WORKFLOWS
# ===================================

# PostgreSQL connection string (for transcript search and user data)
# Must have PGVector extension enabled for semantic search
POSTGRES_CONNECTION="postgresql://username:password@localhost:5432/blox_wizard"

# Redis connection URL (for session management and real-time features)
REDIS_URL="redis://localhost:6379"

# Cache TTL settings (in seconds)
CACHE_SESSION_TTL="3600"      # 1 hour
CACHE_USER_DATA_TTL="86400"   # 24 hours
CACHE_AI_RESPONSE_TTL="1800"  # 30 minutes

# ===================================
# BLOX WIZARD CHAT CONFIGURATION
# ===================================

# Chat feature limits
FREE_USER_QUESTIONS_LIMIT="5"
PREMIUM_USER_QUESTIONS_LIMIT="-1" # -1 for unlimited

# Response settings
DEFAULT_RESPONSE_STYLE="detailed" # detailed|concise|beginner|advanced
MAX_CONVERSATION_HISTORY="10"     # Number of messages to keep in context
AI_RESPONSE_TIMEOUT="30000"       # 30 seconds

# Debug mode for N8n integration
DEBUG_N8N_REQUESTS="false"